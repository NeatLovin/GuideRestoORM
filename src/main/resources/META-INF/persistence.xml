<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="guideRestoJPA">
        <description>
            Persistence unit for the GuideResto project.
        </description>

        <class>ch.hearc.ig.guideresto.business.BasicEvaluation</class>
        <class>ch.hearc.ig.guideresto.business.City</class>
        <class>ch.hearc.ig.guideresto.business.CompleteEvaluation</class>
        <class>ch.hearc.ig.guideresto.business.Evaluation</class>
        <class>ch.hearc.ig.guideresto.business.EvaluationCriteria</class>
        <class>ch.hearc.ig.guideresto.business.Grade</class>
        <class>ch.hearc.ig.guideresto.business.Localisation</class>
        <class>ch.hearc.ig.guideresto.business.Restaurant</class>
        <class>ch.hearc.ig.guideresto.business.RestaurantType</class>

        <properties>
            <!-- Database connection settings are loaded from hibernate.properties -->
            <!-- Use hibernate.properties.template to create your own hibernate.properties file -->
            
            <!-- Connection provider -->
            <property name="hibernate.connection.provider_class" value="org.hibernate.engine.jdbc.connections.internal.DriverManagerConnectionProviderImpl" />
            
            <!-- Specific configuration for Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.OracleDialect" />
            
            <!-- Configuration pour les verrous pessimistes -->
            <!-- Désactiver l'autocommit pour permettre les verrous de fonctionner correctement -->
            <property name="hibernate.connection.autocommit" value="false" />
            
            <!-- Niveau d'isolation transactionnel pour supporter les verrous pessimistes -->
            <!-- READ_COMMITTED est recommandé pour Oracle avec verrous pessimistes -->
            <property name="hibernate.connection.isolation" value="2" />
            
            <!-- Configuration du timeout par défaut pour les verrous (en millisecondes) -->
            <!-- -1 signifie pas de timeout, 0 signifie échec immédiat si verrou non disponible -->
            <property name="jakarta.persistence.lock.timeout" value="0" />
            
            <!-- S'assurer que les entités sont relues après les opérations de verrouillage -->
            <property name="hibernate.jpa.compliance.query" value="true" />
        </properties>
    </persistence-unit>
</persistence>
